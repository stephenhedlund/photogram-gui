

<h1>User Detail</h1>

<hr>

<h1><%= @the_user.username %></h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%=@the_user.id%>
  </dd>
  <dt>
    Edit user
  </dt>
  <dd>
  <form action="/update_user/<%=@the_user.id%>" >
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="input_username" placeholder="Enter a username..." value="<%= @the_user.username %>">

      <button>Update user</button>
    </form>
  </dd>
</dl>

<h1>Own photos (<%=@the_user.own_photos.size%>)</h1>

<table border="1">
<tr>
  <th>
    Image
  </th>
  <th>
    Owner
  </th>
  <th>
    Caption
  </th>
  <th>
    Posted
  </th>
  <th>
  </th>
 <tr> 
<% @the_user.own_photos.each do |a_photo| %>
<tr>
  <td>
    <img src="<%=a_photo.id %>">
  </td>
  <td>
    <%=a_photo.caption%>
  </td>
  <td>
    <%=@the_user.username%>
  </td>
  <td>
    <%=a_photo.created_at%>
  </td>
  <td>
    <a href="/photos/<%=a_photo.id%>">
    Show details
  </td>
</tr>
<% end %>
</table>
