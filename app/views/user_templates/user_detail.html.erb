<ul>
  <li>
    <a href="/users">Users</a>
  </li>
  <li>
    <a href="/photos">Photos</a>
  </li>
</ul>

<h1>User Detail</h1>

<hr>

<h1><%= @the_user.username %></h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%=@the_user.id%>
  </dd>
  <dt>
    Edit user
  </dt>
</dl>

<h1>Own photos (<%=@the_user.own_photos.all.count(@the_user.id)%>)</h1>

<table border="1">
<% @the_user.own_photos.each do |a_photo| %>
<tr>
  <td>
    <img src="<%=a_photo.id %>">
  </td>
  <td>
    <%=a_photo.caption%>
  </td>
  <td>
    <%=@the_user.username%>
  </td>
  <td>
    <%=a_photo.created_at%>
  </td>
  <td>
    <a href="/photos/ <%=a_photo.id%>">
    Show details
  </td>
</tr>
<% end %>
</table>
